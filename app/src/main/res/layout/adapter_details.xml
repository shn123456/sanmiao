<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/details_img"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:singleLine="true"
                android:id="@+id/details_title"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:singleLine="true"
                android:id="@+id/details_size"
                android:gravity="center_vertical"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <ImageView
            android:id="@+id/details_down"
            android:padding="10dp"
            android:src="@mipmap/icon_download2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/quiteDown_View"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <ProgressBar
            android:padding="10dp"
            android:id="@+id/quiteDown_seek"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <TextView
            android:gravity="center"
            android:text="0%"
            android:id="@+id/quiteDown_jindu"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/quiteDown_start"
            android:padding="10dp"
            android:src="@drawable/down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/quiteDown_error"
            android:padding="10dp"
            android:src="@mipmap/icon_error"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>