<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginbg">
    <LinearLayout

        android:background="@color/write"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/set_skin"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:text="主题换肤"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:layout_marginLeft="10dp"
            android:background="@color/linescolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/set_pass"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:text="修改密码"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
        <View
            android:layout_marginLeft="10dp"
            android:background="@color/linescolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/set_xieyi"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:text="服务协议"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
        <View
            android:layout_marginLeft="10dp"
            android:background="@color/linescolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/set_about"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:text="关于我们"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
        <View
            android:layout_marginLeft="10dp"
            android:background="@color/linescolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/set_updata"
            android:drawableRight="@mipmap/icon_next"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:text="版本更新"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/set_no"
            android:gravity="center"
            android:textColor="@color/write"
            android:background="@drawable/login"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:text="退出登录"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>