<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/basebg"
    tools:context="com.sanmiao.wypread.ui.BaseActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/base_activity_title"
        android:background="@color/basecolor">
        <ImageView
            android:id="@+id/base_activity_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@mipmap/nav_back"/>
        <TextView
            android:id="@+id/base_activity_title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18sp"
            android:text="Title"
            android:textColor="@color/write"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
        <TextView
            android:textColor="@color/write"
            android:id="@+id/base_activity_moretext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="保存"
            android:paddingRight="10dp"
            android:textSize="17sp"
            android:visibility="gone"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/base_activity_more"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@mipmap/nav_richscan"
            android:layout_alignParentRight="true"
            />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/base_activity_divider_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/base_activity_title"
        android:background="@color/title_divider_line"/>
    <FrameLayout
        android:id="@+id/base_activity_father_view"
        android:layout_below="@+id/base_activity_divider_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</RelativeLayout>
