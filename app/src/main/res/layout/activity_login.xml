<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/loginbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/write"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:maxLength="11"
            android:id="@+id/login_tel"
            android:textColorHint="@color/textColor"
            android:background="@null"
            android:padding="15dp"
            android:textSize="14sp"
            android:hint="请输入账号"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:layout_marginLeft="10dp"
            android:background="@color/loginbg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <EditText
            android:digits="0123456789QWERTYUIOPLKJHGFDSAZXCVBNMmnbvcxzasdfghjklpoiuytrewq"
            android:inputType="textPassword"
            android:maxLength="20"
            android:id="@+id/login_pass"
            android:textColorHint="@color/textColor"
            android:background="@null"
            android:padding="15dp"
            android:textSize="14sp"
            android:hint="请输入密码"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <EditText
            android:text="60.205.213.117:7772"
            android:maxLength="20"
            android:id="@+id/login_ip_port"
            android:textColorHint="@color/textColor"
            android:background="@null"
            android:padding="15dp"
            android:textSize="14sp"
            android:hint="服务器IP:端口"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
        <TextView
            android:id="@+id/login_ok"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/login"
            android:text="登  录"
            android:textColor="@color/write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/login_forgetPass"
            android:layout_gravity="right"
            android:paddingRight="15dp"
            android:padding="10dp"
            android:gravity="center|right"
            android:text="忘记密码?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
</LinearLayout>