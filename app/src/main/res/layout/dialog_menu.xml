<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="#00000000">
    <View
        android:background="@color/linescolor"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/menu_back"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:drawableTop="@mipmap/icon_back"
            android:text="返回"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/menu_read"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:drawableTop="@mipmap/icon_read_aloud"
            android:text="朗读"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/menu_set"
            android:padding="10dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:drawableTop="@mipmap/icon_set"
            android:text="设置"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>