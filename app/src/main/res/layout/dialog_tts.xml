<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/loginbg">
    <LinearLayout
        android:background="@color/write"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="15dp"
            android:gravity="center"
            android:text="请选择语言"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/linescolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/Mandarin_man"
            android:textColor="@color/basecolor"
            android:padding="10dp"
            android:gravity="center"
            android:text="普通话(男)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/linescolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/Mandarin_woman"
            android:textColor="@color/basecolor"
            android:padding="10dp"
            android:gravity="center"
            android:text="普通话(女)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/linescolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/cantonese"
            android:textColor="@color/basecolor"
            android:padding="10dp"
            android:gravity="center"
            android:text="粤语(女)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/linescolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/sichuan"
            android:textColor="@color/basecolor"
            android:padding="10dp"
            android:gravity="center"
            android:text="四川话(女)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/linescolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/dongbei"
            android:textColor="@color/basecolor"
            android:padding="10dp"
            android:gravity="center"
            android:text="东北话(女)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/linescolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/henan"
            android:textColor="@color/basecolor"
            android:padding="10dp"
            android:gravity="center"
            android:text="河南话(男)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/linescolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/hunan"
            android:textColor="@color/basecolor"
            android:padding="10dp"
            android:gravity="center"
            android:text="湖南话(男)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/linescolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tts_no"
            android:textColor="@color/black"
            android:padding="10dp"
            android:gravity="center"
            android:text="取消"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>