<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/loginbg">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="105dp"
                    android:layout_height="140dp">
                    <LinearLayout
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:id="@+id/lv3"
                        android:orientation="horizontal"
                        android:layout_width="106dp"
                        android:layout_height="140dp">
                        <View
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:layout_gravity="bottom"
                            android:background="@drawable/shadow"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"/>
                        <View
                            android:layout_marginTop="2dp"
                            android:background="@drawable/shadow2"
                            android:layout_gravity="right"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/quiteDetails_img"
                        android:scaleType="fitXY"
                        android:layout_width="105dp"
                        android:layout_height="140dp" />
                </FrameLayout>

                <LinearLayout
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/quiteDetails_title"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/quiteDetails_class"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/quiteDetails_name"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/quiteDetails_readNum"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/quiteDetails_downNum"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@color/write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/quiteDetails_listen"
                    android:layout_marginRight="50dp"
                    android:gravity="center_vertical"
                    android:text="收听"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@mipmap/icon_listen_in"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <CheckBox
                    android:id="@+id/quiteDetails_collection"
                    android:layout_marginLeft="50dp"
                    android:gravity="center_vertical"
                    android:text="收藏"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:background="@color/loginbg"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:background="@color/write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/quiteDetails_jianjie"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="简介"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/quiteDetails_jianjieView"
                        android:layout_below="@+id/quiteDetails_jianjie"
                        android:background="@color/basecolor"
                        android:layout_width="50dp"
                        android:layout_height="2dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/quiteDetails_list"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="列表"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/quiteDetails_listView"
                        android:layout_below="@+id/quiteDetails_list"
                        android:background="@color/basecolor"
                        android:layout_width="50dp"
                        android:layout_height="2dp"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:background="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/quiteDetails_VP"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>
        </LinearLayout>
</LinearLayout>