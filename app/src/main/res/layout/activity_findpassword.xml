<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/loginbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/write"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:textColor="@color/black"
                android:padding="10dp"
                android:text="手机号    "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

            <EditText
                android:maxLength="11"
                android:id="@+id/findpass_tel"
                android:gravity="center|left"
                android:digits="0123456789"
                android:hint="请输入手机号"
                android:textSize="14sp"
                android:textColorHint="@color/textColor"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:background="@color/linescolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:textColor="@color/black"
                android:text="验证码    "
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/findpass_code"
                android:gravity="center|left"
                android:background="@null"
                android:digits="0123456789"
                android:maxLength="6"
                android:hint="请输入验证码"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textColorHint="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <View
                android:background="@color/linescolor"
                android:layout_margin="10dp"
                android:layout_width="1dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/findpass_getcode"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/basecolor"
                android:text="获取验证码"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:background="@color/linescolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:textColor="@color/black"
                android:text="密码        "
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:digits="0123456789QWERTYUIOPLKJHGFDSAZXCVBNMmnbvcxzasdfghjklpoiuytrewq"
                android:id="@+id/findpass_pass"
                android:gravity="center|left"
                android:background="@null"
                android:maxLength="20"
                android:hint="请输入6-20位字母或数字"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:textColorHint="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:background="@color/linescolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:text="确认密码"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:maxLength="20"
                android:digits="0123456789QWERTYUIOPLKJHGFDSAZXCVBNMmnbvcxzasdfghjklpoiuytrewq"
                android:id="@+id/findpass_pass2"
                android:gravity="center|left"
                android:background="@null"
                android:hint="再次确认密码"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:textColorHint="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/findpass_ok"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login"
        android:textColor="@color/write"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="提  交"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>